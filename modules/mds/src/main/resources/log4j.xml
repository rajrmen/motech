<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="DATA_NUCLEUS_FILE" class="org.apache.log4j.FileAppender">
        <param name="File" value="${user.home}/.motech/log/mds-datanucleus.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} (%t) %-5p [%c] - %m%n"/>
        </layout>
    </appender>

    <category name="DataNucleus">
        <priority value="DEBUG"/>
        <appender-ref ref="DATA_NUCLEUS_FILE"/>
    </category>

</log4j:configuration>
